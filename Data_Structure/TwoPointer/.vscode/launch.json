{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C++ 디버깅",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "gdb pretty print 사용 설정",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build cpp file",
        "miDebuggerPath": "/usr/bin/gdb" // Windows라면 예: "C:\\MinGW\\bin\\gdb.exe"
      }
    ]
  }
  